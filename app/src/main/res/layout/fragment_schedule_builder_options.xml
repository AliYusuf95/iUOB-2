<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@id/main_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Possible Combinations"
                android:gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/medium_text"/>

            <TextView
                android:id="@+id/combinations"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="0"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/medium_text"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/probability_info"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info_outline_24dp"
                android:tint="@color/colorPrimaryDark"
                android:background="?selectableItemBackgroundBorderless"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/alert"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Should be less than 20000"
            android:layout_marginStart="10dp"
            android:textColor="@color/red_500"
            android:textSize="@dimen/medium_text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Working Days"
            android:gravity="center"
            android:textSize="@dimen/title_text"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"
            android:layout_marginTop="10dp"
            />

        <info.hoang8f.android.segmented.SegmentedGroup
            android:id="@+id/days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            segmentedgroup:sc_border_width="2dp"
            segmentedgroup:sc_tint_color="@color/colorPrimaryDark">

            <RadioButton
                android:id="@+id/d_any"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Any"
                android:checked="true"
                style="@style/RadioButton" />

            <RadioButton
                android:id="@+id/d_uth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="UTH"
                style="@style/RadioButton" />

            <RadioButton
                android:id="@+id/d_mw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MW"
                style="@style/RadioButton" />

            <RadioButton
                android:id="@+id/d_umth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="UMTH"
                style="@style/RadioButton" />

            <RadioButton
                android:id="@+id/d_utwh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="UTWH"
                style="@style/RadioButton" />

        </info.hoang8f.android.segmented.SegmentedGroup>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start At"
            android:gravity="center"
            android:textSize="@dimen/title_text"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"
            android:layout_marginTop="10dp"
            />

        <info.hoang8f.android.segmented.SegmentedGroup
            android:id="@+id/start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            segmentedgroup:sc_border_width="2dp"
            segmentedgroup:sc_tint_color="@color/colorPrimaryDark">

            <RadioButton
                android:id="@+id/s_any"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Any"
                android:checked="true"
                style="@style/RadioButton" />

            <RadioButton
                android:id="@+id/s_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9 AM"
                style="@style/RadioButton" />

            <RadioButton
                android:id="@+id/s_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10 AM"
                style="@style/RadioButton" />

            <RadioButton
                android:id="@+id/s_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="11 AM"
                style="@style/RadioButton" />

            <RadioButton
                android:id="@+id/s_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12 PM"
                style="@style/RadioButton" />

        </info.hoang8f.android.segmented.SegmentedGroup>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finish At"
            android:gravity="center"
            android:textSize="@dimen/title_text"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"
            android:layout_marginTop="10dp"
            />

        <info.hoang8f.android.segmented.SegmentedGroup
            android:id="@+id/finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            segmentedgroup:sc_border_width="2dp"
            segmentedgroup:sc_tint_color="@color/colorPrimaryDark">

            <RadioButton
                android:id="@+id/f_any"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Any"
                android:checked="true"
                style="@style/RadioButton" />

            <RadioButton
                android:id="@+id/f_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12 PM"
                style="@style/RadioButton" />

            <RadioButton
                android:id="@+id/f_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1 PM"
                style="@style/RadioButton" />

            <RadioButton
                android:id="@+id/f_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2 PM"
                style="@style/RadioButton" />

            <RadioButton
                android:id="@+id/f_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3 PM"
                style="@style/RadioButton" />

        </info.hoang8f.android.segmented.SegmentedGroup>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lectures Location"
            android:gravity="center"
            android:textSize="@dimen/title_text"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"
            android:layout_marginTop="10dp"
            />

        <info.hoang8f.android.segmented.SegmentedGroup
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            segmentedgroup:sc_border_width="2dp"
            segmentedgroup:sc_tint_color="@color/colorPrimaryDark"
            segmentedgroup:sc_checked_text_color="@color/white">

            <RadioButton
                android:id="@+id/l_any"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Any"
                android:checked="true"
                style="@style/RadioButton" />

            <RadioButton
                android:id="@+id/l_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/menu_sakheer"
                style="@style/RadioButton" />

            <RadioButton
                android:id="@+id/l_i"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/menu_isa_town"
                style="@style/RadioButton" />

        </info.hoang8f.android.segmented.SegmentedGroup>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/section_filter_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_gravity="center"
                android:src="@drawable/ic_check_24dp"
                android:tint="@color/colorPrimaryDark"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/section_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="Sections Filter"
                style="?android:attr/buttonStyle"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:backgroundTint="@color/btn_color"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"/>

            <ImageButton
                android:id="@+id/filter_info"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_info_outline_24dp"
                android:tint="@color/colorPrimaryDark"
                android:background="?selectableItemBackgroundBorderless"
                />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

    </LinearLayout>
</ScrollView>